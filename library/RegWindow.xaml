<Window x:Class="library.RegWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="RegWindow" Height="450" Width="400" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="Transparent">
    <Border Width="Auto" Height="Auto" 
            BorderBrush="Black"
            Background="#FF4A4C4E"
          BorderThickness="1"
          CornerRadius="10,10,10,10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button x:Name="close" 
                    Style="{StaticResource jB}" 
                    Background="Transparent" 
                    BorderBrush="Transparent" 
                    Height="25" 
                    Width="25" 
                    VerticalAlignment="Top" 
                    HorizontalAlignment="Right" 
                    Click="close_Click">
                <Image Source="Pic/close.png"></Image>
            </Button>
            
            <Label Content="Регистрация" 
                   FontSize="18" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="1" 
                   Content="Фамилия:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="2" 
                   Content="Имя:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="3" 
                   Content="Отчество:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="4" 
                   Content="Логин:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="5" 
                   Content="Пароль:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>
            <Label Grid.Row="6" 
                   Content="Пов. Пароля:" 
                   FontSize="16" 
                   Margin="5,15,280,10" 
                   HorizontalAlignment="Right" 
                   Foreground="#FFE2F8F4"/>

            <TextBox x:Name="surname" 
                     Grid.Row="1" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}" 
                     FontSize="16"/>
            <TextBox x:Name="name" 
                     Grid.Row="2" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}"
                     FontSize="16"/>
            <TextBox x:Name="patronymic" 
                     Grid.Row="3" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}"
                     FontSize="16"/>
            <TextBox x:Name="login" 
                     Grid.Row="4" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}"
                     FontSize="16"/>
            <TextBox x:Name="password" 
                     Grid.Row="5" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}"
                     FontSize="16"
                     TextChanged="repeatPassword_TextChanged"/>
            <TextBox x:Name="repeatPassword" 
                     Grid.Row="6" 
                     Margin="120,15,10,15" 
                     Style="{StaticResource jT}"
                     FontSize="16"
                     TextChanged="repeatPassword_TextChanged"/>

            <Button x:Name="enter" 
                    Style="{StaticResource jB}" 
                    Grid.Row="7" 
                    Background="#FF178CE5" 
                    Margin="180,10,50,10" 
                    Content="Зарегистрироваться" 
                    Foreground="White" 
                    FontSize="16" 
                    Click="enter_Click"/>
        </Grid>
    </Border>
</Window>
